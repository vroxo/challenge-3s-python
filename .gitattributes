# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf

# Jupyter Notebooks
*.ipynb text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.exe binary
*.dat binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

